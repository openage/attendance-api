{
    "dbServer": {
        "database": "attendance",
        "host": "mongodb://localhost:27017/oa_attendance"
    },
    "webServer": {
        "url": "http://localhost:3008",
        "port": 3008
    },
    "queueServer": {
        "disabled": true
    },
    "system": {
        "name": "Open Age",
        "emailId": "no_reply@openage.in"
    },
    "auth": {
        "provider": "directory"
    },
    "storage": {
        "provider": "drive"
    },
    "message": {
        "provider": "send-it"
    },
    "location": {
        "provider": "googleLocation"
    },
    "sync": {
        "serviceVersion": "1"
    },
    "logger": {
        "console": {
            "level": "silly",
            "handleExceptions": true,
            "json": false,
            "colorize": true
        }
    },
    "providers": {
        "googleLocation": {
            "url": "https://maps.googleapis.com/maps/api/geocode/json",
            "googleKey": "placeholder"
        },
        "directory": {
            "url": "http://localhost:3001/api"
        },
        "send-it": {
            "url": "http://localhost:3002/api"
        },
        "drive": {
            "url": "http://localhost:3003/api"
        }
    },
    "organization": {
        "timeZone": "IST",
        "jobs": {
            "shift": {
                "start": false,
                "end": false
            },
            "day": {
                "start": true
            },
            "month": {
                "start": true
            },
            "year": {
                "start": true
            }
        },
        "timeLog": {
            "ignore": {
                "threshold": 120 // 2 minutes
            },
            "add": {
                "adjust": false
            }
        },
        "shift": {
            "span": {
                "ignoreBreak": false,
                "extra": 480 // 8 hours
            }
        },
        "attendance": {
            "checkIn": {
                "earliest": 180 // minutes early
            },
            "checkOut": {
                "latest": 180 // minutes late
            },
            "overtime": "clocked", // work-span
            "present": {
                "codes": "P|CO",
                "display": "P"
            },
            "leave": {
                "codes": "L|EL|ML|LWS|LT",
                "display": "L"
            },
            "off": {
                "codes": "H|WO",
                "display": "WO"
            },
            "absent": {
                "codes": "A",
                "display": "A"
            }
        },
        "leave": {
            "grant": {
                "over-time": {
                    "multiple": true
                },
                "work-day": {
                    "multiple": true,
                    "states": [
                        "present",
                        "weekOff",
                        "holiday",
                        "checked-in-again",
                        "checkedIn"
                    ]
                }
            }
        },
        "reports": {
            "form-25": {
                "skip": {
                    "leave-columns": [
                        "CO"
                    ]
                }
            }
        }
    }
}
